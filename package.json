{
  "name": "kokutalk",
  "version": "1.0.0",
  "main": "expo-router/entry",
  "author": {
    "email": "omkahub@gmail.com",
    "name": "Mohamedo Desu"
  },
  "description": "KokuTalk is a confession app where users can share their secrets and confessions anonymously. The app utilizes the following technologies and libraries: React Native, Expo, Supabase",
  "scripts": {
    "start": "expo start",
    "build:android": "npx eas-cli build -p android --profile preview",
    "offline": "expo start --offline",
    "publish:expo": "eas update --branch preview && npx sentry-expo-upload-sourcemaps dist",
    "publish:sentry": "npx sentry-expo-upload-sourcemaps dist",
    "upgrade": "npm install expo@latest && npx expo install --fix",
    "android": "npx expo run:android",
    "test": "jest --watchAll",
    "lint": "eslint \"**/*.{js,jsx,ts,tsx}\" && prettier -c \"**/*.{js,jsx,ts,tsx,json}\"",
    "format": "eslint \"**/*.{js,jsx,ts,tsx}\" --fix && prettier \"**/*.{js,jsx,ts,tsx,json}\" --write",
    "ios": "expo run:ios"
  },
  "dependencies": {
    "@expo/vector-icons": "^14.0.2",
    "@react-native-async-storage/async-storage": "1.23.1",
    "@react-native-community/netinfo": "11.3.1",
    "@react-navigation/drawer": "^6.7.2",
    "@react-navigation/native": "^6.1.18",
    "@sentry/react-native": "~5.22.3",
    "@shopify/flash-list": "1.6.4",
    "dayjs": "^1.11.12",
    "dotenv": "^16.4.5",
    "expo": "^51.0.22",
    "expo-blur": "~13.0.2",
    "expo-constants": "~16.0.2",
    "expo-linear-gradient": "~13.0.2",
    "expo-linking": "~6.3.1",
    "expo-notifications": "~0.28.12",
    "expo-router": "~3.5.18",
    "expo-secure-store": "~13.0.2",
    "expo-system-ui": "~3.0.7",
    "expo-updates": "~0.25.21",
    "firebase": "^10.12.4",
    "formik": "^2.4.6",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.74.3",
    "react-native-gesture-handler": "~2.16.2",
    "react-native-keyboard-aware-scroll-view": "^0.9.5",
    "react-native-paper": "^5.12.4",
    "react-native-reanimated": "~3.10.1",
    "react-native-ruler-picker": "^0.2.2",
    "react-native-safe-area-context": "4.10.5",
    "react-native-screens": "3.31.1",
    "react-native-size-matters": "^0.4.2",
    "react-native-toast-message": "^2.2.0",
    "react-native-unistyles": "^2.9.0",
    "yup": "^1.4.0",
    "zustand": "^4.5.4",
    "expo-device": "~6.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.24.9",
    "@types/react": "~18.2.79",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "eslint": "^8.57.0",
    "eslint-config-universe": "^12.1.0",
    "eslint-plugin-hooks": "^0.4.3",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "prettier": "^3.3.3",
    "typescript": "~5.3.3"
  },
  "eslintConfig": {
    "extends": "universe/native"
  },
  "private": true
}
